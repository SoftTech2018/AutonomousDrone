<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GuiController">
   <center>
      <ImageView fx:id="currentFrame" fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </ImageView>
   </center>
   <bottom>
      <Button fx:id="start_btn" mnemonicParsing="false" onAction="#startCamera" text="Start Camera" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <right>
      <SplitPane orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <CheckBox fx:id="grey_checkBox" layoutX="16.0" layoutY="46.0" mnemonicParsing="false" onAction="#colorChange" text="Greyscale" />
                  <Label layoutX="10.0" layoutY="13.0" text="Frames/Second:" />
                  <ChoiceBox fx:id="frames_choiceBox" layoutX="104.0" layoutY="9.0" prefHeight="25.0" prefWidth="48.0" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </right>
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="110.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="forward_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#goForward" text="Go Forward" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            <Button fx:id="left_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#turnLeft" text="Turn Left" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Button fx:id="back_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#goBack" text="Go Back" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Button fx:id="right_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#turnRight" text="Turn Right" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
            <Button fx:id="takeoff_btn" minWidth="85.0" mnemonicParsing="false" onAction="#takeoff" text="Take Off" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </Button>
            <Button fx:id="strafeLeft_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#goLeft" text="Strafe Left" GridPane.halignment="RIGHT" />
            <Button fx:id="strafeRight_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#goRight" text="Strafe Right" GridPane.columnIndex="2" GridPane.halignment="LEFT" />
            <Button fx:id="up_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#flyUp" text="Fly Up" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <Button fx:id="down_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#flyDown" text="Fly Down" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
            <Button fx:id="stop_btn" disable="true" minWidth="85.0" mnemonicParsing="false" onAction="#hoover" text="Stop" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </top>
</BorderPane>
